<script type="text/javascript">

function check(){
    var flag = 0;


    if(document.form1.comment.value == ""){
        flag = 1;
    }

    if(flag){
        window.alert('コメントを入力してください');
        return false; // 送信を中止
    }
    else{
        return true; // 送信を実行
    }
}



</script>

