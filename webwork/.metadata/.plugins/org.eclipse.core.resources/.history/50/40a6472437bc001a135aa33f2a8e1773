public int id ;
public int toid ;

public int cid = 0;

public int createCid(int id,int toid){
if(id>toid) {
	cid=id*1000+toid;
}
else {
	cid=id+toid*1000;
}

return cid;
}
String name = "送信者";
String toname = "受信者";

%>
